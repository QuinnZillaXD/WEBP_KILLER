{
    "manifest_version": 3,
    "name": "WEBP to PNG Converter",
    "version": "1.0",
    "description": "Copy an image and paste it here to convert to PNG.",
    "permissions": ["downloads"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }